{
  "manifest_version": 2,
  "author": "Stas Gavrylov",
  "name": "Git Merge Request Sort",
  "description": "This extension adds an option to sort merge requests by the size of their changes",
  "version": "1.0",
  "permissions": [
    "tabs",
    "webNavigation",
    "https://gitlab.railsreactor.com/*"
  ],
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "https://gitlab.railsreactor.com/*",
        "https://gitlab.railsreactor.com/*/merge_requests*",
        "https://gitlab.railsreactor.com/*/merge_requests?*"
      ],
      "exclude_matches": [
        "https://gitlab.railsreactor.com/*/merge_requests/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ]
}
